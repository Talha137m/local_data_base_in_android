<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#757de8"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/ivMainActivity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShowName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Student Name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivMainActivity3"
        app:layout_constraintTop_toBottomOf="@id/ivMainActivity3" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvShowName"
        app:layout_constraintLeft_toLeftOf="@id/tvShowName"/>
    <TextView
        android:id="@+id/tvShowRollNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Student RollNo"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/etName" />
    <TextView
        android:id="@+id/tvRollNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvShowRollNo"
        app:layout_constraintLeft_toLeftOf="@id/tvShowRollNo"/>
    <TextView
        android:id="@+id/tvShowFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Student Fee"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tvRollNo"
        app:layout_constraintTop_toBottomOf="@id/tvRollNo" />
    <EditText
        android:id="@+id/etFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvShowFee"
        app:layout_constraintLeft_toLeftOf="@id/tvShowFee"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="#002984"
        app:layout_constraintTop_toBottomOf="@id/etFee"
        app:layout_constraintLeft_toLeftOf="@id/etFee"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#002984"
        app:layout_constraintTop_toBottomOf="@id/etFee"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>